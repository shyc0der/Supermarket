<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userinfo"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_centerVertical="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            >
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/newname"
                android:hint="New Display Name"
                android:textColorHint="@android:color/white"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:inputType="textEmailAddress"
                app:met_floatingLabel="highlight"
                app:met_baseColor="@android:color/white"
                app:met_maxCharacters="10"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                />
            <info.hoang8f.widget.FButton
                android:layout_weight="3"
                android:layout_width="0dp"
                android:text="Update"
                android:onClick="updateName"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                fbutton:fButtonColor="@color/sign_in"
                fbutton:cornerRadius="4dp"
                fbutton:shadowColor="@android:color/black"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"


            >
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_weight="7"
                android:layout_width="0dp"
                android:hint="New Email"
                android:id="@+id/newmail"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/white"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:inputType="textEmailAddress"
                app:met_floatingLabel="highlight"
                app:met_baseColor="@android:color/white"
                app:met_maxCharacters="10"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                />

            <info.hoang8f.widget.FButton
                android:layout_weight="3"
                android:layout_width="0dp"
                android:text="Update"
                android:layout_height="wrap_content"
                android:onClick="updateEmail"
                android:textColor="@android:color/white"
                fbutton:fButtonColor="@color/sign_in"
                fbutton:cornerRadius="4dp"
                fbutton:shadowColor="@android:color/black"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                />




        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            >
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_weight="7"
                android:id="@+id/newpass"
                android:layout_width="0dp"
                android:hint="New Password"
                android:textColorHint="@android:color/white"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:inputType="textEmailAddress"
                app:met_floatingLabel="highlight"
                app:met_baseColor="@android:color/white"
                app:met_maxCharacters="10"
                app:met_primaryColor="@android:color/white"
                app:met_singleLineEllipsis="true"
                android:layout_height="wrap_content" />
            <info.hoang8f.widget.FButton
                android:layout_weight="3"
                android:layout_width="0dp"
                android:text="Update"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                fbutton:fButtonColor="@color/sign_in"
                fbutton:cornerRadius="4dp"
                fbutton:shadowColor="@android:color/black"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                android:onClick="resetpass"
                />

        </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        >
        <info.hoang8f.widget.FButton
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:text="DELETE ACCOUNT"
            android:onClick="deleteUser"
            android:textColor="@android:color/black"
            fbutton:fButtonColor="@color/warning"
            fbutton:cornerRadius="4dp"
            fbutton:shadowColor="@android:color/black"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            android:layout_height="wrap_content" />

        <info.hoang8f.widget.FButton
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:text="RESET PASSWORD"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            fbutton:fButtonColor="@color/waning"
            fbutton:cornerRadius="4dp"
            fbutton:shadowColor="@android:color/black"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            />



    </LinearLayout>
    </LinearLayout>

    <LinearLayout
     android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"


        >
        <info.hoang8f.widget.FButton
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:text="GETINFO"
            android:onClick="getuserInfo"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            fbutton:fButtonColor="@color/fbutton_color_pomegranate"
            fbutton:cornerRadius="4dp"
            fbutton:shadowColor="@android:color/black"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            />

        <info.hoang8f.widget.FButton
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_margin="8dp"
            android:text="Signout"
            android:onClick="signout"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            fbutton:fButtonColor="@color/fbutton_color_pomegranate"
            fbutton:cornerRadius="4dp"
            fbutton:shadowColor="@android:color/black"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"


        />

    </LinearLayout>

</RelativeLayout>